<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dao1" class="hello.dao.impl.EmployeeDAOImpl"/>

    <bean id="txmanager1" class="hello.tx.TransactionManager"/>
    <!--代理对象-->
    <bean id="serviceProxy1" class="hello.proxy.EmployeeServiceProxy">
        <property name="txManager" ref="txmanager1"/>
        <property name="target">
            <bean  class="hello.service.impl.EmployeeServiceImpl">
                <property name="dao" ref="dao1"/>
            </bean>
        </property>

    </bean>
</beans>